@import url(http://fonts.googleapis.com/css?family=Special+Elite);

html {
	height: 100%;
	width: 100%;
}
body {
	font-family: 'Open Sans', sans-serif;
	font-weight: 700;
	font-weight: bold;
	height: 100%;
}
#bg {
	background-size: 80%;
	background-image: url(<%= image_path 'secondrefridge.jpg' %>);
	background-repeat: no-repeat;
	background-position: center top 170px;
	height: 1500px;
	width: 100%;
	position: absolute;
	z-index: -2;
}
input[type="text"] {
	width: 400px;
	font-size: 20px;
	height: 30px;
}
ul {
	list-style: none;
}
#header {
	background-color: black;
	max-height: 50%;
	z-index: 1;
}
#intro {
	
	line-height: 0;
	font-size: 35px;
	border: 2px solid transparent;
	padding-left: 15px;
	width: 450px;
	border-radius: 15%;
	color:#FBF4F9;	
}
textarea:focus, input:focus{
    outline: 0;
}
#add-form {
	text-align: center;
	margin: 0 auto;
	text-decoration: none;
}
.user_input {
	text-align: left;
	margin: 0 auto;
	width: 570px;
	padding-top: 10px;
	color: white;
}

#ingredients {
	background-color: rgba(0,0,0,.7);
}
.container {
	position: center;
	width: 100%;
	color: white;
	font-size: 18px;
	font-family: 'Special Elite', cursive;
}

.one_recipe {
	width: 70%;
	margin: 0 auto;
	border: 2px solid black;
	background-color: rgba(0,0,0,.9);
	overflow: hidden;
}
.image {
	/*border: 2px solid blue;*/
	float: right;

}

.title {
	/*border: 2px solid green;*/
	text-align: center;
	border-top: 2px solid white;
	border-bottom: 2px solid white;
}

.ingredients {
	border: 2px solid black;
}
button {
	font-size: 150%;
}
button:hover {
	cursor: pointer;
	color: rgb(100,100,100);
}
